# Routes
# This file defines all application routes (Higher priority routes first)

# index
GET           /                                   controllers.PetController.index

# Create a new pet
POST          /pets/:petType/:name/:gender        controllers.PetController.createPet(petType, name, gender)

# Search for pets by name
GET           /pets/name/:name                    controllers.PetController.searchByName(name)

# Search for pets by type
GET           /pets/type/:petType                 controllers.PetController.searchByTypeAndGender(petType, gender ?= null)

# Delete a pet
DELETE        /pets/:id                           controllers.PetController.deletePet(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                       controllers.Assets.versioned(path="/public", file: Asset)
